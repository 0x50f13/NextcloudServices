<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="Login">
        <EditTextPreference
            android:defaultValue="https://cloud.example.com"
            android:key="server"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Address of your nextcloud server"
            android:title="Nextcloud address" />
        <EditTextPreference
            android:key="password"
            android:title="Password"
            android:summary="Your password"
            android:inputType="textPassword|textWebPassword"
            android:password="true"
            />
        <EditTextPreference
            android:defaultValue=""
            android:key="login"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:summary="Your username"
            android:title="Login" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Status">

    </PreferenceCategory>
    <EditTextPreference
        android:defaultValue="Default value"
        android:enabled="false"
        android:key="status"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Disconnected"
        android:id="@+id/status"
        android:title="Status"
        app:enabled="false" />
</PreferenceScreen>